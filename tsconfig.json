{
"compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "ES6",
    "sourceMap": false,
    "declaration": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths":{
        "src/*":[
            "src/*"
        ],
        "utils/*":[
            "src/utils/*"
        ],
        "validators/*":[
            "src/validators/*"
        ],
        "test/*":[
            "test/helper/*"
        ]
    }
},
"awesomeTypescriptLoaderOptions": {
    "useBabel": true
},
"exclude": [
    "node_modules"
]
}